{
  "name": "ark.env-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --filter=ark.env",
    "typecheck": "turbo run typecheck",
    "docs": "astro dev",
    "docs:dev": "astro dev",
    "docs:start": "astro dev",
    "docs:build": "astro build",
    "docs:preview": "astro preview",
    "docs:astro": "astro",
		"docs:sync": "astro sync",
		"release": "bun run build && changeset publish",
		"fix": "biome check --write .",
		"check": "biome check",
		"check:errors": "biome check --diagnostic-level=error",
		"clean": "rimraf dist node_modules" 
  },
	"devDependencies": {
		"turbo": "^2.4.0",
		"typescript": "^5.7.3",
		"@types/bun": "^1.2.0",
		"changesets-changelog-clean": "^1.3.0",
		"@astrojs/starlight": "^0.31.1",
		"@biomejs/biome": "1.9.4",
		"@changesets/cli": "^2.27.12",
		"astro": "^5.1.5"
	},
	"packageManager": "bun@1.2.0"
}
