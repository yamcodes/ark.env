{
	"name": "ark.env",
	"type": "module",
	"version": "0.0.4",
	"main": "./dist/lib/index.cjs",
	"module": "./dist/lib/index.js",
	"types": "./dist/lib/index.d.ts",
	"description": "Type-safe environment variables parsing and validation for Node.js with ArkType",
	"exports": {
		"types": "./dist/lib/index.d.ts",
		"import": "./dist/lib/index.js",
		"require": "./dist/lib/index.cjs"
	},
	"scripts": {
		"build": "tsup",
		"prepack": "bun run build",
		"sample": "bun --watch src/sample",
		"sample:once": "bun src/sample",
		"test": "bun test --watch",
		"test:once": "bun test",
		"release": "bun run build && changeset publish",
		"fix": "biome check --write .",
		"check": "biome check",
		"check:errors": "biome check --diagnostic-level=error",
		"typecheck": "tsc --noEmit",
		"docs": "astro dev",
		"docs:dev": "astro dev",
		"docs:start": "astro dev",
		"docs:build": "astro build",
		"docs:preview": "astro preview",
		"docs:astro": "astro",
		"docs:sync": "astro sync",
		"clean": "rimraf dist node_modules"
	},
	"files": [
		"dist"
	],
	"keywords": [
		"bun"
	],
	"license": "MIT",
	"homepage": "https://github.com/yamcodes/ark.env#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/yamcodes/ark.env.git"
	},
	"bugs": "https://github.com/yamcodes/ark.env/issues",
	"author": "Yam Borodetsky <yam@yam.codes>",
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@changesets/cli": "^2.27.12",
		"@types/bun": "^1.2.0",
		"bun-plugin-dts": "^0.3.0",
		"changesets-changelog-clean": "^1.3.0",
		"rimraf": "^6.0.1",
		"tsup": "^8.3.6",
		"typescript": "^5.7.3",
		"vitest": "^3.0.4",
		"@astrojs/starlight": "^0.31.1",
		"astro": "^5.1.5",
		"sharp": "^0.33.0"
	},
	"peerDependencies": {
		"arktype": "^2.0.2"
	},
	"dependencies": {
		"picocolors": "^1.1.1"
	}
}
