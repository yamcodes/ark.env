{
	"name": "arkenv-monorepo",
	"private": true,
	"workspaces": ["packages/*", "apps/*"],
	"scripts": {
		"build": "turbo run build",
		"build:packages": "turbo run build --filter=./packages/*",
		"dev": "turbo run dev --filter=arkenv",
		"typecheck": "turbo run typecheck",
		"docs": "turbo run dev --filter=docs",
		"release": "mv README.md packages/arkenv && pnpm run build:packages && changeset publish",
		"fix": "biome check --write .",
		"check": "biome check",
		"check:errors": "biome check --diagnostic-level=error",
		"clean": "rimraf dist node_modules",
		"test": "vitest"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@changesets/cli": "^2.29.6",
		"changesets-changelog-clean": "^1.3.0",
		"rimraf": "^6.0.1",
		"turbo": "^2.5.6",
		"typescript": "^5.9.2",
		"vitest": "^3.2.4"
	},
	"packageManager": "pnpm@10.15.1",
	"pnpm": {
		"ignoredBuiltDependencies": ["esbuild", "sharp"],
		"onlyBuiltDependencies": ["@biomejs/biome", "@sentry/cli"]
	}
}
